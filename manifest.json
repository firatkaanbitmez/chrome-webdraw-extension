{
  "manifest_version": 3,
  "name": "WebDraw Extension",
  "description": "Draw on any webpage.",
  "version": "1.0",
  "icons": {
    "16": "icons/draw-16.png",
    "48": "icons/draw-48.png",
    "128": "icons/draw-128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {},  
  "web_accessible_resources": [
    {
      "resources": ["draw.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
